<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>CrazyHamsters #1</title>
    <link rel="stylesheet" href="style.css">
    <script src="script.js" defer></script>
</head>
<body>
    <div class="image-container">
        <img src="1.png" alt="Main Image">
        <img src="American_Soccer.png" alt="Item" class="overlay pulse">
        <img src="Gray_Mouse.png" alt="Pet" class="overlay swing">
        <img src="Ramen.png" alt="Thought" class="overlay water">
        <div class="buttons-container">
            <button style="background-color: red;" onclick="toggleOverlay(this, 'pulse')">I</button>
            <button style="background-color: green;" onclick="toggleOverlay(this, 'swing')">P</button>
            <button style="background-color: blue;" onclick="toggleOverlay(this, 'water')">T</button>
        </div>
    </div>
    <script>
        function toggleOverlay(button, effect) {
            const overlay = document.querySelector('.' + effect);
            if (overlay) {
                overlay.style.display = overlay.style.display === 'none' ? 'block' : 'none';
            }
        }
    </script>
</body>
</html>
